{
  "name": "Notification",
  "base": "PersistedModel",
  "strict": "validate",
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "id": {
      "type": "string",
      "id": true,
      "defaultFn": "guid"
    },
    "userId": {
      "type": "string",
      "required": true
    },
    "title": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "string",
      "required": true
    },
    "imageUrl": {
      "type": "string"
    },
    "type": {
      "type": "string",
      "default": "alert"
    },
    "status": {
      "type": "string",
      "default": "unread"
    },
    "isRead": {
      "type": "boolean",
      "default": false
    },
    "createdAt": {
      "type": "date",
      "defaultFn": "now"
    },
    "readAt": {
      "type": "date"
    },
    "meta": {
      "type": "object"
    }
  },
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "User",
      "foreignKey": "userId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {},
  "mixins": {}
}
