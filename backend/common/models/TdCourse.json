{
  "name": "TdCourse",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "courseName": {
      "type": "string",
      "required": true
    },
    "subTitle": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "coverImage": {
      "type": "string",
      "description": "URL or path to the course cover image (e.g., /Uploads/<timestamp>_image.png)"
    },
    "pricing": {
      "type": "number",
      "default": 0
    },
    "language": {
      "type": "string",
      "default": "English"
    },
    "duration": {
      "type": "string",
      "description": "Total course length (e.g., '5h 30m')"
    },
    "level": {
      "type": "string",
      "description": "Beginner, Intermediate, Advanced"
    },
    "instructorName": {
      "type": "string"
    },
    "instructorProfileImage": {
      "type": "string",
      "description": "URL or path to the instructor's profile image (e.g., /Uploads/<timestamp>_instructor.jpg)"
    },
    "rating": {
      "type": "number",
      "default": 0,
      "min": 0,
      "max": 5
    },
    "totalRatings": {
      "type": "number",
      "default": 0,
      "min": 0
    },
    "enrollments": {
      "type": "number",
      "default": 0,
      "min": 0
    },
    "tags": {
      "type": ["string"],
      "default": []
    },
    "isFeatured": {
      "type": "boolean",
      "default": false
    },
    "isPublished": {
      "type": "boolean",
      "default": false
    },
    "modules": {
      "type": ["object"],
      "default": [],
      "itemType": {
        "type": "object",
        "properties": {
          "index": {
            "type": "number",
            "required": true
          },
          "topic": {
            "type": "string",
            "required": true
          },
          "videos": {
            "type": ["object"],
            "default": [],
            "itemType": {
              "type": "object",
              "properties": {
                "title": {
                  "type": "string",
                  "required": true
                },
                "duration": {
                  "type": "string",
                  "required": true
                },
                "videoUrl": {
                  "type": "string",
                  "required": true
                },
                "description": {
                  "type": "string",
                  "required": true
                }
              }
            }
          }
        }
      }
    },
    "createdAt": {
      "type": "date",
      "defaultFn": "now"
    },
    "updatedAt": {
      "type": "date",
      "defaultFn": "now"
    }
  },
  "relations": {
    "courseCategories": {
      "type": "hasMany",
      "model": "CourseCategory",
      "foreignKey": "courseId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}