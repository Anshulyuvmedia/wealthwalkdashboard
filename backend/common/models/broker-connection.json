{
    "name": "BrokerConnection",
    "base": "PersistedModel",
    "idInjection": true,
    "options": {
        "validateUpsert": true
    },
    "properties": {
        "userId": {
            "type": "string",
            "required": true,
            "index": true
        },
        "broker": {
            "type": "string",
            "required": true
        },
        "clientId": "string",
        "apiKey": "string",
        "apiSecret": "string",
        "accessToken": "string",
        "refreshToken": "string",
        "tokenExpiry": "date",
        "ucc": "string",
        "linkedAt": {
            "type": "date",
            "defaultFn": "now"
        }
    },
    "validations": [],
    "relations": {
        "user": {
            "type": "belongsTo",
            "model": "user",
            "foreignKey": "userId"
        }
    },
    "acls": [
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "DENY"
        },
        {
            "accessType": "*",
            "principalType": "ROLE",
            "principalId": "$authenticated",
            "permission": "ALLOW"
        },
        {
            "accessType": "EXECUTE",
            "principalType": "ROLE",
            "principalId": "$everyone",
            "permission": "ALLOW",
            "property": "callback"
        }
    ],
    "methods": {}
}